<h2>Definition: <%= @definition.phrase %></h2>
<h3>word: <%= @definition.word.phrase %></h3>

<form action="/words/<%= @definition.word.id %>/definitions/<%= @definition.id %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="phrase">Redefine</label>
  <input id="phrase" name="phrase" type="text">

  <button type="submit">Update definition</button>
</form>

<form action="/definitions/<%= @definition.word.id %>/definitions/<%= @definition.id %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit">Delete definition</button>
</form>

<a href="/definitions/<%= @definition.word.id %>">Back to <%= @definition.word.phrase %></a>